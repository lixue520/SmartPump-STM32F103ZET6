#include "waterpump.h"

void pump_init()
{
    GPIO_InitTypeDef GPIO_InitStructure;
    GPIO_InitStructure.GPIO_Pin = GPIO_Pin_12 | GPIO_Pin_13|GPIO_Pin_14|GPIO_Pin_15;
    GPIO_InitStructure.GPIO_Mode = GPIO_Mode_Out_PP;
    GPIO_InitStructure.GPIO_Speed = GPIO_Speed_50MHz;
    GPIO_Init(GPIOA, &GPIO_InitStructure);

   GPIO_ResetBits(GPIOA, GPIO_Pin_12); // IN+
    GPIO_ResetBits(GPIOA, GPIO_Pin_13); // IN-,当两者都是低电平时电机动，两者相异则不动
	
	  
    GPIO_InitStructure.GPIO_Pin = GPIO_Pin_8|GPIO_Pin_9;
    GPIO_InitStructure.GPIO_Mode = GPIO_Mode_Out_PP;
    GPIO_InitStructure.GPIO_Speed = GPIO_Speed_50MHz;
    GPIO_Init(GPIOC, &GPIO_InitStructure);

		 GPIO_ResetBits(GPIOC, GPIO_Pin_8); // IN+
    GPIO_ResetBits(GPIOC, GPIO_Pin_9); // IN-,当两者都是低电平时电机动，两者相异则不动
}

void pump_start_1()
{
    GPIO_SetBits(GPIOA, GPIO_Pin_12);	// IN+:1
    GPIO_ResetBits(GPIOA, GPIO_Pin_13); // IN-:0
}

void pump_stop_1()
{
    GPIO_ResetBits(GPIOA, GPIO_Pin_12); // IN+
    GPIO_ResetBits(GPIOA, GPIO_Pin_13); // IN-,当两者都是低电平时电机动，两者相异则不动
}

void pump_start_2() {
    GPIO_SetBits(GPIOC, GPIO_Pin_8);	// IN+:1
    GPIO_ResetBits(GPIOC, GPIO_Pin_9); // IN-:0
}
void pump_stop_2() {

    GPIO_ResetBits(GPIOC, GPIO_Pin_8); // IN+
    GPIO_ResetBits(GPIOC, GPIO_Pin_9); // IN-,当两者都是低电平时电机动，两者相异则不动

}